# Client URL - URL where your React app is running
CLIENT_URL=http://localhost:3000

# MongoDB connection string
MONGODB_URI=your_mongodb_connection_string_here

# Server port
PORT=4000

# JWT Secrets - Generate secure random strings
# You can generate these using: openssl rand -base64 32
SECRET=your_jwt_secret_here
REFRESH_SECRET=your_refresh_token_secret_here

# Crypto Key - Generate a secure hex string
# You can generate using: openssl rand -hex 32
CRYPTO_KEY=your_crypto_key_here

# Email Configuration (for sending verification emails)
EMAIL=your_email@gmail.com
PASSWORD=your_app_specific_password
EMAIL_SERVICE=Gmail

# Content Moderation APIs (optional - leave empty if not using)
# Google Perspective API for toxicity detection
PERSPECTIVE_API_KEY=your_perspective_api_key_here

# TextRazor API for content analysis
TEXTRAZOR_API_KEY=your_textrazor_api_key_here

# Hugging Face API for content classification
INTERFACE_API_KEY=your_huggingface_api_key_here

# API URLs (these can remain as is)
PERSPECTIVE_API_DISCOVERY_URL=https://commentanalyzer.googleapis.com/$discovery/rest?version=v1alpha1
TEXTRAZOR_API_URL=https://api.textrazor.com/
INTERFACE_API_URL=https://api-inference.huggingface.co/models/facebook/bart-large-mnli

# Local classifier service (if running)
CLASSIFIER_API_URL=http://127.0.0.1:5000/classify